<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="app_primary_color" format="color" /> <!-- topbar -->
    <attr name="app_content_bg_color" format="color" /> <!-- content-->
    <attr name="qmui_config_color_background" format="color" />
    <declare-styleable  name="inputview">
        <!--图片-->
        <attr name="input_icon" format="reference"></attr>
        <!--字体-->
        <attr name="input_hint" format="string"></attr>
        <!--是否密文-->
        <attr name="is_pass" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable  name="nav">
        <!--图片-->
        <attr name="icon" format="reference"></attr>
        <!--字体-->
        <attr name="hint" format="string"></attr>
        <!--是否密文-->
        <attr name="pass" format="boolean"></attr>
        <attr name="right_icon" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="TabContainerViewStyle">
        <attr name="tabTextSize" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="iconWidth" format="dimension" />
        <attr name="divideLineColor" format="color" />
        <attr name="divideLineHeight" format="dimension" />
    </declare-styleable>
</resources>