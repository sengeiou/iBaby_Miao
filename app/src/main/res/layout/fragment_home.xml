<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#B2D7F5"
        tools:ignore="MissingConstraints">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/qmui_content_spacing_horizontal"
            android:paddingLeft="@dimen/qmui_content_spacing_horizontal"
            android:paddingRight="@dimen/qmui_content_spacing_horizontal"
            android:text="信息管理"
            android:textColor="?attr/qmui_config_color_gray_1"
            android:textSize="17sp" />
    </LinearLayout>
    <!--边框分割细线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/qmui_s_list_item_bg_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:columnCount="2"
            android:layout_marginRight="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <Button
                android:id="@+id/adm_editMiao"
                style="@style/main_button"
                android:text="疫苗信息"
                />
            <Button
                android:id="@+id/adm_editBaby"
                style="@style/main_button"
                android:text="接种信息"
                />
            <Button
                android:id="@+id/adm_editExam"
                style="@style/main_button"
                android:text="体检套餐"
                />
            <Button
                android:id="@+id/adm_editExPr"
                style="@style/main_button"
                android:text="体检项目"
                />
            <Button
                android:id="@+id/adm_editOrder"
                style="@style/main_button"
                android:text="预约情况"
                />
            <Button
                android:id="@+id/adm_editHos"
                style="@style/main_button"
                android:text="医院信息"
                />
        </GridLayout>
    </LinearLayout>

</LinearLayout>